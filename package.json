{
  "name": "handwritten-source",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "git@github.com:STDSuperman/handwritten-source.git",
  "author": "STDSuperman <2750556766@qq.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "npm run clean && tsc --build",
    "prepare": "husky install",
    "commit": "git add -A && git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format:fix": "prettier --write .",
    "husky-pre-commit": "husky set .husky/_/pre-commit 'npm run test'",
    "husky-commit-msg": "husky set .husky/_/commit-msg 'npm run commitlint --edit $1'",
    "clean": "rimraf dist",
    "build:watch": "tsc --watch",
    "check": "tsc --noEmit",
    "format": "prettier --check src/**/*.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.23",
    "babel-jest": "^26.6.3",
    "consola": "^2.15.3",
    "jest": "^26.6.3",
    "promises-aplus-tests": "^2.1.2",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "prettier": "^2.3.2",
    "babel-eslint": "^10.1.0",
    "rimraf": "^3.0.2",
    "eslint-plugin-import": "^2.24.2",
    "typescript": "^4.4.2",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3"
  },
  "config": { "commitizen": { "path": "node_modules/cz-customizable" } }
}
